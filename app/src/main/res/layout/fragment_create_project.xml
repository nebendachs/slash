<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CreateProject"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_project"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/projectName"
        style="@style/LoginRegisterScreenInputElement"
        android:ems="10"
        android:hint="@string/project_name"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/projectDescription"
        style="@style/LoginRegisterScreenInputElement"
        android:ems="10"
        android:hint="@string/description"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/AddPeopleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_people"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/role_scrum_master"
        style="@style/slashObject"/>

    <Spinner
        android:id="@+id/scrumMasterSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ButtonNext"
        android:layout_marginTop="10dp" />

</LinearLayout>